<Window x:Class="newDemEx.Views.PartnerApplicationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:newDemEx.Views"
        mc:Ignorable="d"
        TextElement.FontFamily="Segoe UI"
        TextElement.FontSize="16"
        Title="Заявки партнёров" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <ScrollViewer Name="ApplicationScroll"/>

        <Button Grid.Row="1" Name="BackButton" Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20 0" Click="BackButton_Click"/> 
        <Button Grid.Row="1" Name="AddApplicationButton" Content="Добавить" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20 0" Click="AddApplicationButton_Click"/> 
    </Grid>
</Window>
